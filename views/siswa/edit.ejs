<%- include ../templates/adminlte/header-top-nav.ejs %>
<!-- Full Width Column -->
<div class="content-wrapper">
  <div class="container">
    <br>
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Edit Data Siswa
        <small>Update Data Siswa</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="/siswa"></i> Data Siswa</a></li>
        <li class="active"> Edit</li>
      </ol>
    </section>

    <section class="content">
      <div class="box box-default">
        <div class="box-header with-border">
          <h3 class="box-title">Edit Data Siswa</h3>
        </div>
        <div class="box-body">
          <form action="/siswa/<%= siswa.id %>/edit" method="post">
            <div class="form-group">
              <label for="nama"> Nama :</label>
              <input type="text" value="<%= siswa.nama %>" class="form-control" name="nama" id="nama" required>
            </div>
            <div class="form-group">
              <label for="gender"> Jenis Kelamin :</label>
              <select name="gender" class="form-control" required>
                <option value="<%= siswa.gender %>">--- <%= siswa.gender %> ---</option>
                <option value="Pria">Pria</option>
                <option value="Wanita">Wanita</option>
              </select>
            </div>
            <div class="form-group">
              <label for="no_telp"> No. Telpon :</label>
              <input type="number" value="<%= siswa.no_telp %>" class="form-control" name="no_telp" id="kota" required>
            </div>
            <div class="form-group">
              <label for="alamat"> Alamat :</label>
              <input type="text" value="<%= siswa.alamat %>" class="form-control" name="alamat" id="kota" required>
            </div>
            <button type="submit" class="btn btn-primary">Ubah</button>
          </form>
        </div>
      </div>
    </section>
  </div>
</div>
<%- include ../templates/adminlte/footer.ejs %>